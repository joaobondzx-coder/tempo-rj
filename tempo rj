// ----- Util -----
const DAYS_PT = ["Domingo","Segunda","Ter√ßa","Quarta","Quinta","Sexta","S√°bado"];
const MONTHS_PT = ["janeiro","fevereiro","mar√ßo","abril","maio","junho","julho","agosto","setembro","outubro","novembro","dezembro"];

function formatDate(d) {
  const dia = DAYS_PT[d.getDay()];
  const num = String(d.getDate()).padStart(2, "0");
  const mes = MONTHS_PT[d.getMonth()];
  return `${dia}, ${num} de ${mes}`;
}
function rand(min, max) { return Math.round(min + Math.random() * (max - min)); }
function pick(arr) { return arr[Math.floor(Math.random() * arr.length)]; }

// ----- Modelagem de clima simulada (Rio) -----
// Faixas plaus√≠veis para um visual: m√°ximas 27‚Äì36¬∞C, m√≠nimas 20‚Äì26¬∞C.
// Condi√ß√µes com distribui√ß√£o maior para sol/nuvens, menor para chuva/temporal.
const CONDITIONS = [
  { key: "sunny", label: "Ensolarado", icon: "‚òÄÔ∏è", rain: [0, 10], wind: [6, 18] },
  { key: "partly", label: "Parcialmente nublado", icon: "üå§Ô∏è", rain: [10, 30], wind: [8, 22] },
  { key: "cloudy", label: "Nublado", icon: "‚òÅÔ∏è", rain: [10, 40], wind: [6, 20] },
  { key: "rain", label: "Chuva", icon: "üåßÔ∏è", rain: [40, 80], wind: [10, 28] },
  { key: "storm", label: "Temporal", icon: "‚õàÔ∏è", rain: [60, 100], wind: [18, 40] },
];

function weightedCondition() {
  const bag = [
    "sunny","sunny","sunny",
    "partly","partly","partly","partly",
    "cloudy","cloudy",
    "rain","rain",
    "storm"
  ];
  const key = pick(bag);
  return CONDITIONS.find(c => c.key === key);
}

function generateDay(baseMax = 32, baseMin = 23, drift = 2) {
  const cond = weightedCondition();
  const max = rand(baseMax - drift, baseMax + drift);
  const min = rand(baseMin - drift, baseMin + drift);
  const rain = rand(cond.rain[0], cond.rain[1]);
  const wind = rand(cond.wind[0], cond.wind[1]);
  const tempNow = rand(min, max - 1);
  return { cond, max, min, rain, wind, tempNow };
}

function generateForecast(days = 15) {
  const out = [];
  let baseMax = 32, baseMin = 23;
  for (let i = 0; i < days; i++) {
    // pequena tend√™ncia (brisa mar√≠tima, varia√ß√µes leves)
    baseMax += (Math.random() - 0.5) * 1.2;
    baseMin += (Math.random() - 0.5) * 1.0;
    out.push(generateDay(Math.round(baseMax), Math.round(baseMin), 2));
  }
  return out;
}

// ----- Render -----
const views = {
  home: document.getElementById("view-home"),
  forecast: document.getElementById("view-forecast"),
  about: document.getElementById("view-about"),
};

function showView(name) {
  Object.values(views).forEach(v => v.classList.remove("active"));
  views[name].classList.add("active");
  document.querySelectorAll(".nav-btn").forEach(b => {
    b.classList.toggle("active", b.dataset.view === name);
  });
}

document.querySelectorAll(".nav-btn").forEach(btn => {
  btn.addEventListener("click", () => showView(btn.dataset.view));
});

const todayDateEl = document.getElementById("today-date");
const todayIconEl = document.getElementById("today-icon");
const todayConditionEl = document.getElementById("today-condition");
const todayTempEl = document.getElementById("today-temp");
const todayMaxEl = document.getElementById("today-max");
const todayMinEl = document.getElementById("today-min");
const todayRainEl = document.getElementById("today-rain");
const todayWindEl = document.getElementById("today-wind");

const nextDaysEl = document.getElementById("next-days");
const forecastGridEl = document.getElementById("forecast-grid");

function render() {
  const now = new Date();
  todayDateEl.textContent = formatDate(now);

  const forecast = generateForecast(15);
  const today = generateDay(); // hoje pode ser calculado separadamente
  // Hoje
  todayIconEl.textContent = today.cond.icon;
  todayConditionEl.textContent = today.cond.label;
  todayTempEl.textContent = `${today.tempNow}¬∞C`;
  todayMaxEl.textContent = `${today.max}¬∞C`;
  todayMinEl.textContent = `${today.min}¬∞C`;
  todayRainEl.textContent = `${today.rain}%`;
  todayWindEl.textContent = `${today.wind} km/h`;

  // Pr√≥ximos dias (resumo curto)
  nextDaysEl.innerHTML = "";
  for (let i = 0; i < 5; i++) {
    const d = new Date(now);
    d.setDate(d.getDate() + (i + 1));
    const f = forecast[i];
    nextDaysEl.appendChild(cardNode(d, f));
  }

  // 15 dias completos
  forecastGridEl.innerHTML = "";
  forecast.forEach((f, idx) => {
    const d = new Date(now);
    d.setDate(d.getDate() + (idx + 1));
    forecastGridEl.appendChild(cardNode(d, f, true));
  });
}

function cardNode(date, data, detailed = false) {
  const div = document.createElement("div");
  div.className = "card";

  const left = document.createElement("div");
  left.className = "left";
  const day = document.createElement("div");
  day.className = "day";
  day.textContent = DAYS_PT[date.getDay()];
  const dt = document.createElement("div");
  dt.className = "date";
  dt.textContent = formatCardDate(date);
  left.append(day, dt);

  const mid = document.createElement("div");
  mid.className = "mid";
  const icon = document.createElement("div");
  icon.className = "icon";
  icon.textContent = data.cond.icon;
  const cond = document.createElement("div");
  cond.className = "cond";
  cond.textContent = data.cond.label;
  mid.append(icon, cond);

  const right = document.createElement("div");
  right.className = "right";
  const max = document.createElement("div");
  max.className = "max";
  max.textContent = `${data.max}¬∞C`;
  const min = document.createElement("div");
  min.className = "min";
  min.textContent = `${data.min}¬∞C`;
  right.append(max, min);

  if (detailed) {
    const rain = document.createElement("div");
    rain.textContent = `Chuva: ${data.rain}%`;
    const wind = document.createElement("div");
    wind.textContent = `Vento: ${data.wind} km/h`;
    right.append(rain, wind);
  }

  div.append(left, mid, right);
  return div;
}

function formatCardDate(d) {
  const num = String(d.getDate()).padStart(2, "0");
  const mes = String(d.getMonth() + 1).padStart(2, "0");
  return `${num}/${mes}`;
}

// Init
document.addEventListener("DOMContentLoaded", render);
